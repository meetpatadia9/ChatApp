<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_dialog"
        android:padding="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/baseline_delete_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/aquamarine5" />

        <TextView
            android:id="@+id/txtConform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="Delete message?"
            android:textAlignment="center"
            android:textColor="@color/aquamarine6"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/imgDelete"
            app:layout_constraintStart_toEndOf="@id/imgDelete"
            app:layout_constraintTop_toTopOf="@id/imgDelete" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_26sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtConform">

            <TextView
                android:id="@+id/delete_yes"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_txtv_dialog"
                android:backgroundTint="@color/aquamarine4"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="Delete"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/delete_no"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/shape_txtv_dialog"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="@color/aquamarine4" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
